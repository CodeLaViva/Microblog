<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.lhz.model">

    <class name="Comments" table="Comments">

        <!-- 主键 ，映射-->
        <id name="comments_id" column="comments_id">
            <generator class="native"/>
        </id>

        <!-- 非主键，映射 -->
        <!-- 非主键，映射 -->
        <property name="comments_info" column="comments_info"/>
        <property name="comments_time" column="comments_time"/>
        <property name="messages_id" column="messages_id"/>
        <property name="user_id" column="user_id"/>


    </class>

</hibernate-mapping>